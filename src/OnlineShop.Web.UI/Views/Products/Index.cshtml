@model IEnumerable<OnlineShop.Web.UI.Models.ProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Created</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td>@item.Category</td>
            </tr>
        }
    </tbody>
</table>